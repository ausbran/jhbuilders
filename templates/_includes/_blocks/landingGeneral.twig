{% extends '_includes/_blocks/landingBase' %}

{% block content %}
    {% for block in blocks %}
        {% switch block.type.handle %}
            {% case 'text' %}
                {% include '_includes/_blocks/text' %}
            {% case 'buttons' %}
                {% include '_includes/_blocks/buttons' with { buttons: block.buttons.all() } %}
            {% case 'iframe' %}
                {% include '_includes/_blocks/iframe' %}
        {% endswitch %}
    {% endfor %}
{% endblock %}

{% block background %}
    {% for block in blocks %}
        {% if block.type.handle == 'asset' %}
            {% include '_includes/_blocks/asset' with { asset: block.asset.one() } %}
        {% endif %}
    {% endfor %}
{% endblock %}
