<div class="landing project-gate">
    <div class="project-category">
        {{ entry.newBuildsText }}
        {% set newBuildsButton = entry.newBuildsButton.one() %}
        {% if newBuildsButton %}
            {% set linkEntry = newBuildsButton.buttonLink.one() %}
            {% if linkEntry %}
                {% set link = linkEntry.getUrl() %}
                {% include '_includes/button' with { 
                    link: link, 
                    label: newBuildsButton.buttonLabel
                } %}
            {% endif %}
        {% endif %}
    </div>
    <div class="project-category">
        {{ entry.remodelsText }}
        {% set remodelsButton = entry.remodelsButton.one() %}
        {% if remodelsButton %}
            {% set linkEntry = remodelsButton.buttonLink.one() %}
            {% if linkEntry %}
                {% set link = linkEntry.getUrl() %}
                {% include '_includes/button' with { 
                    link: link, 
                    label: remodelsButton.buttonLabel
                } %}
            {% endif %}
        {% endif %}
    </div>
</div>